<script>
    window.onload = function ()
    {
        NewLocationCheckboxChanged(document.querySelector("#chkNewLocation"));
    }
    
    function NewLocationCheckboxChanged(e)
    {
        if (e.checked)
        {
            document.querySelector("#ddlLocations").value = 0;
            document.querySelector("#ddlLocations").setAttribute("disabled", "");
            document.querySelector("#txtLocationName").removeAttribute("disabled");
            document.querySelector("#grpNewLocation").style.display = 'block';
        }
        else
        {
            document.querySelector("#ddlLocations").removeAttribute("disabled");
            document.querySelector("#txtLocationName").setAttribute("disabled", "");
            document.querySelector("#grpNewLocation").style.display = 'none';
        }
    }
</script>
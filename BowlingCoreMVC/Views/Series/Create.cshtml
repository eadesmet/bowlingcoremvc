@model BowlingCoreMVC.Models.GameViewModels.GameViewModels.SeriesViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Series</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LeagueID" class="control-label"></label>
                <select asp-for="LeagueID" asp-items="@Model.Leagues" class="form-control">
                    <option value="0">---No League---</option>    
                </select>
                @*<span asp-validation-for="Leagues" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="NumberOfGames" class="control-label"></label>
                <input asp-for="NumberOfGames" class="form-control" id="NumOfGames" min="2" max="9" value="3"/>
                <span asp-validation-for="NumberOfGames" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

